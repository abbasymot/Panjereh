<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Panjereh.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Panjereh.Views"
    xmlns:local="clr-namespace:Panjereh"
    Shell.FlyoutBehavior="Disabled"
    Title="Panjereh">

    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Books" ContentTemplate="{DataTemplate views:BooksPage}" />
        <!--<ShellContent Title="Movies" ContentTemplate="{DataTemplate views:MoviesPage}" />-->
    </TabBar>
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
